{
    "fmt": {
        "indentWidth": 2,
        "lineWidth": 80
    },
    "tasks": {
        "dev": "DENO_ENV=development deno run --watch --allow-net --allow-read --allow-env main.ts",
        "preview": "DENO_ENV=production deno run --allow-net --allow-read --allow-env main.ts",
        "fmt": "deno fmt ./src"
    },
    "imports": {
        "@/": "./src/",
        "@std/assert": "jsr:@std/assert@1",
        "@land/jsx": "https://deno.land/x/jsx@v0.1.5/mod.ts",
        "@land/zod": "https://deno.land/x/zod@v3.24.1/mod.ts",
        "@fs": "jsr:@std/http/file-server"
    },
    "compilerOptions": {
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "lib": ["dom", "esnext", "deno.ns", "deno.window"]
    }
}
